def format_amount(amount, currency):
    if currency == 'INR':
        return f'â‚¹{amount:.2f}'
    elif currency == 'USD':
        return f'${amount:.2f}'
    elif currency == 'EUR':
        return f'â‚¬{amount:.2f}'
    elif currency == 'GBP':
        return f'Â£{amount:.2f}'
    elif currency == 'JPY':
        return f'Â¥{amount:.2f}'
    else:
        return f'{amount:.2f}'

